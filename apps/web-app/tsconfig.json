{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./src/*"],
      "@terminal/common/*": ["./node_modules/@terminal/common/dist/*"]
    }
  },
  "linterOptions": {
    "exclude": ["src/**", "components/**"],
  },
  "include": [
    "components.d.ts",
    "components-global.d.ts",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "documentation/**/*.md",
    "src/**/*.svg"
  ],
}
